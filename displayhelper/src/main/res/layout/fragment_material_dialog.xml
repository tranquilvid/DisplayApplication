<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialog.MaterialDialog">

    <View
        android:id="@+id/view_customdialog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/view_bg"
        app:layout_constraintBottom_toBottomOf="@+id/space_dialog"
        app:layout_constraintTop_toTopOf="@+id/ll_circle_image" />

    <LinearLayout
        android:id="@+id/ll_circle_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circle_bg"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tv_title_dialog"
        app:layout_constraintEnd_toEndOf="@id/view_customdialog"
        app:layout_constraintStart_toStartOf="@id/view_customdialog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/iv_circle_inside"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_mark" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_title_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/tv_message_dialog"
        app:layout_constraintEnd_toEndOf="@+id/view_customdialog"
        app:layout_constraintStart_toStartOf="@id/view_customdialog"
        app:layout_constraintTop_toBottomOf="@id/ll_circle_image"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Sucess" />

    <TextView
        android:id="@+id/tv_message_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@id/bt_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_dialog"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Sucess fugygudfjn oihjy7t7yfucghb 8s6et76edgy hgyt tfygytuifyuiuiggfgigifu hgh" />


    <Button
        android:id="@+id/bt_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="#5ad645"
        android:text="OK"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/view_customdialog"
        app:layout_constraintStart_toStartOf="@id/view_customdialog"
        app:layout_constraintTop_toBottomOf="@+id/tv_message_dialog"
        app:layout_constraintVertical_chainStyle="packed" />


    <Space
        android:id="@+id/space_dialog"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_dialog" />


</androidx.constraintlayout.widget.ConstraintLayout>
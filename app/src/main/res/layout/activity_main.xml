<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SampleActivity">

    <Button
        android:id="@+id/bt_showtoast"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="Show Toast"
        android:onClick="onToastClick"
        app:layout_constraintBottom_toTopOf="@+id/bt_showmaterialdialog"
        app:layout_constraintEnd_toStartOf="@+id/bt_showdialog"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/bt_showdialog"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:text="Show Dialog"
        android:onClick="onDialogClick"
        app:layout_constraintBottom_toTopOf="@+id/bt_showprogress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt_showtoast"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/bt_showmaterialdialog"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Show Materialdialog"
        android:onClick="onMaterialdialogClick"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/bt_showtoast"
        app:layout_constraintTop_toBottomOf="@+id/bt_showtoast"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/bt_showprogress"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Show Progress"
        android:onClick="onProgressClick"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/bt_showdialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_showmaterialdialog"
        app:layout_constraintTop_toBottomOf="@+id/bt_showdialog"
        app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>




